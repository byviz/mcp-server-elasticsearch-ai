# Configuración de Elasticsearch MCP Server
# Copia este archivo a .env y configura tus valores

# ===========================================
# ELASTICSEARCH CONFIGURATION
# ===========================================

# URL del cluster de Elasticsearch
ELASTICSEARCH_URL=https://tu-cluster.es.io:9243

# Autenticación con usuario y contraseña
ELASTICSEARCH_USERNAME=tu-usuario
ELASTICSEARCH_PASSWORD=tu-contraseña

# O alternativamente, usar API Key
# ELASTICSEARCH_API_KEY=tu-api-key-aqui

# Configuración adicional de Elasticsearch
ELASTICSEARCH_TIMEOUT=30
ELASTICSEARCH_VERIFY_CERTS=true
# ELASTICSEARCH_CA_CERTS=/path/to/ca.crt
# ELASTICSEARCH_CLIENT_CERT=/path/to/client.crt
# ELASTICSEARCH_CLIENT_KEY=/path/to/client.key

# ===========================================
# MCP SERVER CONFIGURATION
# ===========================================

# Configuración del servidor MCP
MCP_TRANSPORT=stdio
MCP_PORT=8000
MCP_LOG_LEVEL=INFO
MCP_ENABLE_SECURITY_FILTERING=true 